# Development environment variables
DATABASE_URL=postgresql://receipts_user:receipts_password@localhost:5432/receipts_db

# Azure Services (to be configured later)
SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_ACCOUNT_URL=https://youraccount.blob.core.windows.net
AZURE_STORAGE_CONTAINER=receipts-documents
AZURE_SEARCH_ENDPOINT=https://yourservice.search.windows.net
AZURE_SEARCH_KEY=your-admin-key

# OpenAI (to be configured later)
OPENAI_API_KEY=your-openai-api-key

# Application settings
SECRET_KEY=your-super-secret-jwt-key-change-in-production-must-be-32-characters-minimum
BACKEND_PORT=8000
FRONTEND_PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Upload settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.gif,.doc,.docx

# Development settings
DEBUG=True